<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.AdiMusic" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <!--<item name="colorPrimary">@color/purple_500</item>-->
        <item name="colorPrimary">@color/black</item>
        <!--<item name="colorPrimaryVariant">@color/purple_700</item>-->
        <item name="colorPrimaryVariant">@color/black</item>
        <!--<item name="colorOnPrimary">@color/white</item>-->
        <item name="colorOnPrimary">@color/metallic_gold</item>
        <item name="titleTextColor">@color/metallic_gold</item>
        <item name="android:textColor">@color/metallic_gold</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/metallic_gold</item>
        <item name="colorSecondaryVariant">@color/metallic_gold</item>
        <item name="colorOnSecondary">@color/metallic_gold</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.VideosList" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="colorSecondary">@color/metallic_gold</item>

    </style>

    <style name="Theme.MusicPlayer" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>

        <item name="colorPrimaryVariant">@color/black</item>

        <item name="colorOnPrimary">@color/metallic_gold</item>
        <item name="titleTextColor">@color/metallic_gold</item>
        <item name="android:textColor">@color/metallic_gold</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/metallic_gold</item>
        <item name="colorSecondaryVariant">@color/metallic_gold</item>
        <item name="colorOnSecondary">@color/metallic_gold</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.VideoPlayer" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/metallic_gold</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="ThemeSelector" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/myTheme.ActionBar</item>

    </style>
    <style name="myTheme.ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/metallic_gold</item>
        <item name="titleTextStyle">@style/myTheme.ActionBar.Text</item>
    </style>
    <style name="myTheme.ActionBar.Text" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/metallic_gold</item>
    </style>
</resources>